{
  "manifest_version": 3,
  "name": "Domain Swapper",
  "version": "1.0",
  "description": "Automatically swap between predefined domains",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "128": "icon128.png"
    }
  }
}
